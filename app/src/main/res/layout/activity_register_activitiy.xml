<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <TextView
            android:text="Username"
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:id="@+id/textView" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/usernameField"/>
    <TextView
            android:text="Password"
            android:layout_width="93dp"
            android:layout_height="27dp"
            android:id="@+id/pressureTextView" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.116" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameField"/>
    <TextView
            android:text="Confirm password"
            android:layout_width="178dp"
            android:layout_height="26dp"
            android:id="@+id/textView3" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.168" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField"/>
    <TextView
            android:text="Your email"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:id="@+id/TextView4" android:textSize="18sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/confirmPasswordField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.124"/>
    <Button
            android:text="Register"
            android:layout_width="228dp"
            android:layout_height="67dp"
            android:id="@+id/registerButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/cancelButton"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" app:layout_constraintHorizontal_bias="0.75"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailField"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="417dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pressureTextView"/>
    <EditText
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPasswordField"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailField"
            app:layout_constraintTop_toBottomOf="@+id/TextView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Cancel"
            android:layout_width="80dp"
            android:layout_height="67dp"
            android:id="@+id/cancelButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailField"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>